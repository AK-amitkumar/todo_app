<openerp>
  <data>

    <record id="view_form_todo_task_kanban" model="ir.ui.view">
      <field name="name">view_form_todo_task_kanban</field>
      <field name="model">todo.task</field>
      <field name="arch" type="xml">

        <kanban default_group_by="stage">
            <templates>
              <field name="message_follower_ids" />
              <t t-name="kanban-box">
                  <div class="oe_kanban_card">
                    <div class="oe_kanban_content">
                        <h4><a type="open">
                                <field name="name" />
                        </a></h4>
                        <field name="tags" />
                        <ul>
                            <li><field name="user_id" /></li>
                            <li><field name="date_deadline" /></li>
                        </ul>
                        <t t-if="record.effort_estimate.raw_value > 0">
                            <li>Estimate <field name="effort_estimate"/></li>
                        </t>
                        <t t-esc="record.message_follower_ids.value" />
                        <t t-foreach="record.message_follower_ids.raw_value" t-as="rec">
                            <t t-esc="rec" />;
                        </t>
                        <div class="oe_kanban_bottom_right">
                            <field name="kanban_state" widget="kanban_state_selection"/>
                        </div>
                        <div class="oe_kanban_footer_left">
                            <field name="priority" widget="priority"/>
                        </div>
                    </div>
                </div>
              </t>
          </templates>
        </kanban>

      </field>
    </record>

    <!-- Menu and Action -->
    <act_window id="todo_app.action_todo_task"
        name=" To-Do Tasks"
        res_model="todo.task"
        view_mode="kanban,tree,form,calendar,gantt,graph"
        target="current"
        context="{'search_default_filter_my_tasks': True}"
        domain=""
        limit=""
        />

  </data>
</openerp>
