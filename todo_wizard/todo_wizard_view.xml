<openerp>
  <data>

    <record id="view_form_todo_wizard" model="ir.ui.view">
      <field name="name">view_form_todo_wizard</field>
      <field name="model">todo.wizard</field>
      <field name="arch" type="xml">

        <form>
            <group>
                <field name="tasks" />
                <field name="new_deadline" />
                <field name="new_user" />
            </group>
            <footer>
                <button type="object" name="do_mass_update"
                    string="Update" class="oe_highlight"
                    attrs="{'invisible': [('tasks','=',[])]}"/>
                <button type="object" name="button_test" string="Test" />
                <button type="object" name="do_populate"
                    string="Populate" />
                <button special="cancel" string="Cancel"/>
            </footer>
        </form>

      </field>
    </record>

    <!-- Menu and Action -->
    <act_window id="todo_app.action_todo_wizard"
        name="To-Do Tasks Wizard"
        src_model="todo.task"
        res_model="todo.wizard"
        view_mode="form"
        target="new"
        />

  </data>
</openerp>
